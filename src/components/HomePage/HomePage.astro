---
import Welcome from './components/Welcome/Welcome.astro';
import RecentPostsContainer from './components/RecentPostsContainer/RecentPostsContainer.astro';
---

<div class="home-page">
	<Welcome />
	<h1>Recent Posts</h1>
	<RecentPostsContainer />
</div>

<style lang="scss">
	.home-page {
		@include general-properties(100%, auto);
		@include display-flex(column, center, center);

		h1 {
			@include font($fontPoiretOne, 3.5rem, $color, center);
			margin: 0.5rem;

			@include media-query($media-md) {
				font-size: 3rem;
				margin: 0.3rem;
			}
		}
	}
</style>
